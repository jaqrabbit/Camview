<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      margin: 0;
      padding: 0;
      background-color: #0e0e0e;
      color: #f1f1f1;
    }
    .header {
      background-color: #1e1e1e;
      padding: 16px 24px;
      font-size: 1.5rem;
      font-weight: 600;
      border-bottom: 1px solid #333;
      text-align: center;
    }
    .container {
      max-width: 900px;
      margin: 24px auto;
      padding: 20px;
      background: #1a1a1a;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(0,0,0,0.5);
    }
    h2 {
      color: #ffffff;
      font-size: 1.25rem;
      margin-bottom: 10px;
    }
    form {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }
    input[type="text"] {
      padding: 10px;
      font-size: 1rem;
      border-radius: 6px;
      border: 1px solid #444;
      background-color: #2a2a2a;
      color: #fff;
    }
    button {
      padding: 10px 20px;
      background-color: #3b82f6;
      color: #fff;
      font-size: 1rem;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      margin-top: 10px;
      transition: background-color 0.2s ease-in-out;
    }
    button:hover {
      background-color: #2563eb;
    }
    .cam-list {
      margin-top: 20px;
      background: #111;
      padding: 12px;
      border-radius: 8px;
      border: 1px solid #333;
    }
    .cam-item {
      padding: 10px;
      margin-bottom: 8px;
      background: #222;
      border: 1px solid #444;
      border-radius: 6px;
    }
    .cam-item span {
      display: block;
      margin-bottom: 4px;
    }
  </style>
</head>
<body>
  <div class="header">⚙️ Admin Panel</div>
  <div class="container">
    <h2>Add New Camera</h2>
    <form action="/admin/add" method="POST">
      <input type="text" name="name" placeholder="Camera Name" required>
      <input type="text" name="stream" placeholder="Stream URL (RTSP/HTTP)" required>
      <button type="submit">Add Camera</button>
    </form>

    <div class="cam-list">
      <h2>Current Cameras</h2>
      <% cams.forEach(function(cam, index) { %>
        <div class="cam-item">
          <span><strong>Name:</strong> <%= cam.name %></span>
          <span><strong>Stream:</strong> <%= cam.stream %></span>
        </div>
      <% }); %>
    </div>
  </div>
</body>
</html>