<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Live Camera Viewer</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    * {
      box-sizing: border-box;
    }
    body {
      margin: 0;
      background: #0e0e0e;
      color: #fff;
      font-family: 'Inter', sans-serif;
      display: flex;
      flex-direction: column;
      height: 100vh;
      overflow: hidden;
    }
    .header {
      padding: 12px 24px;
      font-size: 1.25rem;
      font-weight: 600;
      background: #1e1e1e;
      border-bottom: 1px solid #333;
      text-align: center;
    }
    .container {
      flex: 1;
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #000;
    }
    .stream {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: contain;
      opacity: 0;
      transition: opacity 0.8s ease-in-out;
    }
    .stream.active {
      opacity: 1;
      z-index: 1;
    }
    .switcher {
      background: rgba(20, 20, 20, 0.9);
      padding: 12px;
      position: absolute;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      flex-wrap: wrap;
      gap: 12px;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(255,255,255,0.1);
    }
    .switcher button {
      background: #2c2c2c;
      color: #fff;
      border: 1px solid #444;
      border-radius: 8px;
      padding: 8px 14px;
      font-size: 0.9rem;
      cursor: pointer;
      transition: background 0.2s ease-in-out;
    }
    .switcher button:hover {
      background: #3d3d3d;
    }
  </style>
</head>
<body>
  <div class="header">ðŸ”´ Live Camera Viewer</div>
  <div class="container" id="cameraContainer"></div>
  <div class="switcher" id="cameraSwitcher"></div>

  <script>
    const container = document.getElementById('cameraContainer');
    const switcher = document.getElementById('cameraSwitcher');

    fetch('/api/cams')
      .then(res => res.json())
      .then(cameras => {
        cameras.forEach((cam, idx) => {
          const video = document.createElement('video');
          video.src = cam.stream;
          video.autoplay = true;
          video.muted = true;
          video.playsInline = true;
          video.classList.add('stream');
          if (idx === 0) video.classList.add('active');
          container.appendChild(video);

          const btn = document.createElement('button');
          btn.textContent = cam.name || `Cam ${idx + 1}`;
          btn.onclick = () => switchStream(idx);
          switcher.appendChild(btn);
        });
      });

    function switchStream(index) {
      const streams = document.querySelectorAll('.stream');
      streams.forEach((s, i) => {
        if (i === index) {
          s.classList.add('active');
          s.play();
        } else {
          s.classList.remove('active');
        }
      });
    }
  </script>
</body>
</html>